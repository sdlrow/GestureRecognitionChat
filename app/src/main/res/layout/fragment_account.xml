<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBlue"
    tools:context=".AccountFragment">


    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_profile_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            android:src="@drawable/ic_user_circe_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="yevdokimovbusiness@gmail.com"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:id="@+id/strokeMailProfile"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/accountDivider"
        app:layout_constraintTop_toBottomOf="@id/profile" />

    <LinearLayout
        android:id="@+id/wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile">

        <ImageView
            android:id="@+id/wifi_radio"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_icon_star" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="Подключение по Wi-fi"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_button_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:checked="true"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:thumbTint="@color/profile_color"
            android:trackTint="@color/profile_color" />

    </LinearLayout>

    <View
        android:id="@+id/strokeWifi"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/accountDivider"
        app:layout_constraintTop_toBottomOf="@id/wifi" />

    <LinearLayout
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/strokeWifi">

        <ImageView
            android:id="@+id/not_radio"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_icon_star" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="Разрешить уведомления"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_button_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:checked="true"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:thumbTint="@color/profile_color"
            android:trackTint="@color/profile_color" />

    </LinearLayout>


    <View
        android:id="@+id/strokeNot"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/accountDivider"
        app:layout_constraintTop_toBottomOf="@id/notification" />

    <LinearLayout
        android:id="@+id/password_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/strokeNot">

        <ImageView
            android:id="@+id/change_password"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_icon_star_grey" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="Изменить пароль"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/next_pass_action"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_arrow_grey_right" />
    </LinearLayout>

    <View
        android:id="@+id/strokePass"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/accountDivider"
        app:layout_constraintTop_toBottomOf="@id/password_change" />

    <LinearLayout
        android:id="@+id/mail_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/strokePass">

        <ImageView
            android:id="@+id/change_mail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_icon_star_grey" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="Изменить почту"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/next_mail_action"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_arrow_grey_right" />
    </LinearLayout>

    <View
        android:id="@+id/strokeMail"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/accountDivider"
        app:layout_constraintTop_toBottomOf="@id/mail_change" />

    <LinearLayout
        android:id="@+id/delete_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/strokeMail">

        <ImageView
            android:id="@+id/mail_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_start_pink" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="Удалить аккаунт"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/next_delete_action"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_arrow_grey_right" />
    </LinearLayout>

    <View
        android:id="@+id/strokeDelete"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/accountDivider"
        app:layout_constraintTop_toBottomOf="@id/delete_mail" />

    <LinearLayout
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/delete_mail">

        <ImageView
            android:id="@+id/contact_star"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_icon_star" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="Обратная связь"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/next_contact_action"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_arrow_grey_right" />

    </LinearLayout>

    <View
        android:id="@+id/strokeContact"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/accountDivider"
        app:layout_constraintTop_toBottomOf="@id/contact" />

    <Button
        android:id="@+id/my_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/ibm_plex_sans_bold"
        android:text="Выйти"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>